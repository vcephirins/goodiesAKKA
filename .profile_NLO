# Alias de mail
export akmail="nicolas.lormant@akka.eu"
function mailak() {
SUB=$2
ATT=$1
  if [[ ! -f $ATT ]]
  then
     SUB=$1
     mailx -s "$SUB" nicolas.lormant@akka.eu
     return
  fi
  if [[ $SUB == "" ]]
  then 
     SUB="No Subject"
   fi
 mailx -a $ATT -s "$SUB" nicolas.lormant@akka.eu
}


